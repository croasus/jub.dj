      table(class='table', id='clip-table')
        tbody
          tr(id='clip-settings')
            td
            td
              form(id='clip-start-form', action='')
                input(class='form-control jub-nav-input jub-nav-item clip-input', 
                  id='clip-start-value', placeholder='start', data-toggle='tooltip', 
                  data-placement='top', title='Start Clip Time', oninput='updateClipButton()')
            td
              form(id='clip-end-form', action='')
                input(class='form-control jub-nav-input jub-nav-item clip-input', 
                id='clip-end-value', placeholder='stop', data-toggle='tooltip', 
                data-placement='top', title='End Clip Time', oninput='updateClipButton()')
            td(class='right')
              div(class='input-group input-group-md')
                button(class='material-icons btn btn-default clip-btn', type='button', id='confirm-clip',
